{
  "name": "mcp-codegen-monorepo",
  "version": "1.1.0",
  "private": true,
  "description": "Universal Code Mode - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:cli": "npm run build --workspace=@mcp-codegen/cli",
    "build:runtime": "npm run build --workspace=@mcp-codegen/runtime",
    "test": "npm run test --workspaces --if-present",
    "test:cli": "npm run test --workspace=@mcp-codegen/cli",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "dev": "npm run dev --workspaces --if-present"
  },
  "keywords": [
    "codegen",
    "code-mode",
    "universal",
    "mcp",
    "openapi",
    "rest-api",
    "typescript",
    "llm",
    "ai-agents",
    "monorepo"
  ],
  "author": "Maxwell King <maxwellgriffinking@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyranosurasmax/MCP-CODEGEN.git"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  }
}
