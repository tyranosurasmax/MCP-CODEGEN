{
  "name": "@mcp-codegen/cli",
  "version": "1.1.0",
  "description": "Universal Code Mode CLI - Transform ANY API into type-safe TypeScript wrappers",
  "main": "dist/index.js",
  "bin": {
    "mcp-codegen": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublish": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "keywords": [
    "codegen",
    "code-mode",
    "universal",
    "mcp",
    "openapi",
    "rest-api",
    "graphql",
    "typescript",
    "llm",
    "ai-agents",
    "api-wrapper"
  ],
  "author": "Maxwell King <maxwellgriffinking@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyranosurasmax/MCP-CODEGEN.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@mcp-codegen/runtime": "^1.1.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "commander": "^12.0.0",
    "json-schema-to-typescript": "^15.0.0",
    "zod": "^3.23.8",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "glob": "^10.3.10",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
